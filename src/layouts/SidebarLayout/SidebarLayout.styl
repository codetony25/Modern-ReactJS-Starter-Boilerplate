/* Sidebar Layout Styles */
@import '../../styles/base'

aside
  position: absolute
  width: 300px
  height: 100%
  background: --color.dark-gray-medium
  top: 0
  transition: 0.5s ease
  z-index: 100

  .open
    right: -1px

  .close
    right: -301px

  .sidebar-close
    cursor: pointer
    float: right
    margin-top: 20px
    margin-right: 20px
    font-size: 20px
    color: --color.white
    transition: 0.2s

    &:hover
      color: var(--bright-red)
