{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins" : [
    "react"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEVELOPMENT__"    : false,
    "__PRODUCTION__"     : false
  },
  "rules": {
    "semi"              : [2, "never"],
    "key-spacing"       : 0,
    "spaced-comment"    : 0,
    "space-before-function-paren" : 0
  }
}
